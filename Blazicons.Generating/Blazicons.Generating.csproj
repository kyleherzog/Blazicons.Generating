<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>14.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationVersion>3.1</ApplicationVersion>
    <ApplicationRevision>0</ApplicationRevision>
    <Version>3.1</Version>
    <Authors>Kyle Herzog</Authors>
    <PackageTags>Blazor Code Generation</PackageTags>
    <Description>Provides support for generating Blazicon library packages.</Description>
    <PackageProjectUrl>https://github.com/kyleherzog/Blazicons.Generating</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kyleherzog/Blazicons.Generating</RepositoryUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageIcon>blazicons-md-128.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <!-- Package the MSBuild task and its dependencies -->
  <ItemGroup>
    <!-- Include the MSBuild .props and .targets files -->
    <BuildFiles Include="..\build\Blazicons.Generating.props">
      <Link>Build\Blazicons.Generating.props</Link>
    </BuildFiles>
    <BuildFiles Include="..\build\Blazicons.Generating.targets">
      <Link>Build\Blazicons.Generating.targets</Link>
    </BuildFiles>

    <None Include="@(BuildFiles)" Pack="true" PackagePath="build\" />
    <None Include="@(BuildFiles)" Pack="true" PackagePath="buildTransitive\" Link="%(BuildFiles.Link)" />
  </ItemGroup>

  <!-- Include the task assembly and its dependencies in the package -->
  <PropertyGroup>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <GenerateDependencyFile>true</GenerateDependencyFile>
  </PropertyGroup>

  <Target Name="PackTaskDependencies" AfterTargets="Build">
    <ItemGroup>
      <!-- Copy the main assembly and all dependencies to the tasks folder -->
      <_TaskFiles Include="$(OutputPath)*.dll" />
      <_TaskFiles Include="$(OutputPath)*.pdb" />
      <_TaskFiles Include="$(OutputPath)*.deps.json" />
    </ItemGroup>

    <Copy SourceFiles="@(_TaskFiles)" DestinationFolder="$(BaseOutputPath)$(Configuration)\tasks\netstandard2.0\" SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <None Include="$(BaseOutputPath)$(Configuration)\tasks\**\*" Pack="true" PackagePath="tasks\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CodeCasing" Version="4.0.5" />
    <PackageReference Include="HtmlAgilityPack" Version="1.12.4" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="18.3.3">
      <PrivateAssets>all</PrivateAssets>
      <ExcludeAssets>Runtime</ExcludeAssets>
      <IncludeAssets>compile; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Threading" Version="17.14.15">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="10.0.103">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="10.0.103">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="17.14.15">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SecurityCodeScan.VS2019" Version="5.6.7">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SonarAnalyzer.CSharp" Version="10.19.0.132793">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Text.Analyzers" Version="3.3.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <None Update="blazicons-md-128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>